{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "controllerFileNameSuffix": [".controller.ts", ".controlador.ts"],
          "dtoFileNameSuffix": [".dto.ts", ".comando.ts", ".command.ts"],
          "classValidatorShim": true
        }
      }
    ]
  }
}
